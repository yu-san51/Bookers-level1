
<main>
	<div class="flash"><%= flash[:notice] %></div>

	<h1>Books</h1>

		<table class="books-table">
			<thead>
				<tr>
					<th class="books-title">Title</th>
					<th class="books-body">Body</th>
					<th colspan="3", class="action"></th>
				</tr>
			</thead>
			<tbody>
			    <% @books.each do |book| %>

					<tr>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
						<td><%= link_to "Show", book %></td>
						<td><%= link_to "Edit", edit_book_path(book.id) %></td>
						<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm"=>"Are you sure?"%></td>
					</tr>
				<% end %>

			</tbody>
		</table>

	<div class="new-book">
		<h2>New book</h2>


			<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
			  <div id="error_explanation">
			    <h2><%= @product.errors.count %>件のエラーがあります。</h2>

			    <ul>
			    <% @book.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>

				<p class="new">title</p>
					<%= f.text_field :title %>

				<p class="new">body</p>
					<%= f.text_area :body %>

				<p class="new"><%= f.submit "Create Book" %></p>

			<% end %>

	</div>

</main>
